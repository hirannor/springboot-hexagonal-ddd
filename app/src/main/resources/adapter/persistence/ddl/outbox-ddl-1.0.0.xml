<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.19.xsd">

    <changeSet id="create_tables::outbox:ddl:2.0.0" author="hirannor">
        <createSequence
                sequenceName="outbox_seq"
                incrementBy="5"
                startValue="1"/>

        <createTable tableName="EC_OUTBOX_MESSAGE">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="message_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="message_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="attempt_count" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>

            <column name="last_attempt_at" type="TIMESTAMP"/>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="payload" type="CLOB">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_outbox_status" tableName="EC_OUTBOX_MESSAGE">
            <column name="status"/>
        </createIndex>

        <createIndex indexName="idx_outbox_created_at" tableName="EC_OUTBOX_MESSAGE">
            <column name="created_at"/>
        </createIndex>

        <addUniqueConstraint
                tableName="EC_OUTBOX_MESSAGE"
                columnNames="message_id"
                constraintName="uk_outbox_message_id"/>
    </changeSet>
</databaseChangeLog>
