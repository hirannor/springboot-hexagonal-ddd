            {
              "listen": "test",
              "script": {
                "exec": [
                  "let jsonData = pm.response.json();\r",
                  "\r",
                  "// Check if token exists in response\r",
                  "if (jsonData.accessToken) {\r",
                  "    pm.environment.set(\"bearerToken\", jsonData.accessToken);\r",
